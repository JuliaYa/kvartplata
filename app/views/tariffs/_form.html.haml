= form_for(@tariff) do |f|
  - if @tariff.errors.any?
    #error_explanation
      %h2
        = pluralize(@tariff.errors.count, 'error')
        prohibited this tariff from being saved:

      %ul
        - @tariff.errors.full_messages.each do |msg|
          %li
            = msg

  .actions
    = f.submit